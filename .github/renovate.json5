{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:monorepos",
    "group:recommended",
    "github>whitesource/merge-confidence:beta"
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["argocd"],
      "matchDatasources": ["docker", "git-tags", "helm","github-tags", "github-releases"]
    }
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "ignored",
  "timezone": "Asia/Seoul",
  // repo config
  "repositories": ["sangheee/renovate-action-test"],
  "ignorePaths": [],
  "username": "renovate[bot]",
  "gitAuthor": "renovate[bot] <oss-user-bot[bot]@users.noreply.github.com>",
  // PR config
  "dependencyDashboardTitle": "Dependency Dashboard ðŸ¤–",
  "dependencyDashboardHeader": "",
  "prFooter": "",
  "baseBranches": ["main","test"],
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "commitBodyTable": true,
  "prHourlyLimit": 1
}
